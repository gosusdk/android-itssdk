<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="700dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg2"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account : dinhcongtoan"
            android:textColor="#751410"
            android:textSize="18sp"
            android:textStyle="bold"
            android:typeface="serif" />

        <LinearLayout
            android:layout_width="600dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginRight="60dp"
            android:paddingHorizontal="50dp"
            android:gravity="left"
            android:orientation="vertical">

            <!-- VIP -->
            <RelativeLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginVertical="5dp"
                    android:text="VIP Infor:"
                    android:textColor="#751410"
                    android:textSize="18sp"
                    android:typeface="serif"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/current_vip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginVertical="5dp"
                    android:layout_marginLeft="120dp"
                    android:layout_marginRight="230dp"
                    android:text="3"
                    android:textAlignment="viewEnd"
                    android:textColor="#751410"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:ignore="MissingConstraints" />

                <FrameLayout
                    android:id="@+id/FrVip_up"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="50dp"
                    tools:ignore="MissingConstraints">

                    <Button
                        android:id="@+id/btnVip_up"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/btn_red"
                        android:elevation="1dp"
                        android:text="VIP up"
                        android:textColor="@color/white" />

                    <ImageView
                        android:id="@+id/imageVipup"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical|start"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/arrow_up"
                        android:elevation="2dp" />
                </FrameLayout>
            </RelativeLayout>

            <!-- Level -->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginVertical="5dp"
                    android:text="Level:"
                    android:textColor="#751410"
                    android:textSize="18sp"
                    android:typeface="serif"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/current_level"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginVertical="5dp"
                    android:layout_marginLeft="120dp"
                    android:layout_marginRight="230dp"
                    android:text="3"
                    android:textAlignment="viewEnd"
                    android:textColor="#751410"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:ignore="MissingConstraints" />

                <FrameLayout
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="50dp"
                    tools:ignore="MissingConstraints">

                    <Button
                        android:id="@+id/btnLevel_up"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/btn_red"
                        android:elevation="1dp"
                        android:text="Level up"
                        android:textColor="@color/white" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical|start"
                        android:layout_marginLeft="2dp"
                        android:background="@drawable/level_up"
                        android:elevation="2dp" />
                </FrameLayout>
            </RelativeLayout>

            <!-- Power -->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginVertical="5dp"
                    android:text="Power:"
                    android:textColor="#751410"
                    android:textSize="18sp"
                    android:typeface="serif"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/current_power"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginVertical="5dp"
                    android:layout_marginLeft="120dp"
                    android:layout_marginRight="230dp"
                    android:text="100000"
                    android:textAlignment="viewEnd"
                    android:textColor="#751410"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:ignore="MissingConstraints" />

                <FrameLayout
                    android:id="@+id/FrPower_up"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="50dp"
                    tools:ignore="MissingConstraints">

                    <Button
                        android:id="@+id/btnPower_up"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/btn_red"
                        android:elevation="1dp"
                        android:text="Power up"
                        android:textColor="@color/white" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center_vertical|start"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/strong_up"
                        android:elevation="100dp" />
                </FrameLayout>
            </RelativeLayout>

            <!-- Market -->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginVertical="5dp"
                    android:text="Buy items:"
                    android:textColor="#751410"
                    android:textSize="18sp"
                    android:typeface="serif"
                    tools:ignore="MissingConstraints"></TextView>

                <FrameLayout
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="50dp"
                    tools:ignore="MissingConstraints">

                    <Button
                        android:id="@+id/btnPurchase"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/btn_red"
                        android:elevation="1dp"
                        android:text="Store"
                        android:textColor="@color/white" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center_vertical|start"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/market_icon"
                        android:elevation="2dp" />
                </FrameLayout>
            </RelativeLayout>


            <!-- Bag -->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginVertical="5dp"
                    android:text="Use items:"
                    android:textColor="#751410"
                    android:textSize="18sp"
                    android:typeface="serif" />

                <FrameLayout
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="50dp"
                    tools:ignore="MissingConstraints">

                    <Button
                        android:id="@+id/btnBag"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/btn_red"
                        android:elevation="1dp"
                        android:text="Bag"
                        android:textColor="@color/white" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center_vertical|start"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/bag_icon"
                        android:elevation="2dp" />
                </FrameLayout>
            </RelativeLayout>

            <!-- Activity -->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginVertical="5dp"
                    android:text="Activity:"
                    android:textColor="#751410"
                    android:textSize="18sp"
                    android:typeface="serif" />

                <FrameLayout
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="50dp"
                    tools:ignore="MissingConstraints">

                    <Button
                        android:id="@+id/btnActivityList"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/btn_red"
                        android:elevation="1dp"
                        android:text="Activity List"
                        android:textColor="@color/white" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center_vertical|start"
                        android:layout_marginStart="5dp"
                        android:background="@drawable/activity_icon"
                        android:elevation="2dp" />
                </FrameLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>